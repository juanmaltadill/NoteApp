<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iesmurgi.noteapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:longClickable="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp">
        <activity
            android:name="com.iesmurgi.noteapp.EditarNotaActivity"
            android:exported="false" />
        <activity
            android:name="com.iesmurgi.noteapp.SeleccionarIconoActivity"
            android:exported="false" />
        <activity
            android:name="com.iesmurgi.noteapp.SeleccionarFechaHoraActivity"
            android:exported="false" />
        <activity
            android:name="com.iesmurgi.noteapp.CrearNotaActivity"
            android:exported="false" />
        <activity
            android:name="com.iesmurgi.noteapp.ListaNotasActivity"
            android:exported="false" />
        <activity android:name="com.iesmurgi.noteapp.NuevaNotaActivity" />
        <activity android:name="com.iesmurgi.noteapp.NuevaListaActivity" />
        <activity android:name="com.iesmurgi.noteapp.SignUpActivity" />
        <activity android:name="com.iesmurgi.noteapp.HomeActivity" />
        <activity android:name="com.iesmurgi.noteapp.AuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>